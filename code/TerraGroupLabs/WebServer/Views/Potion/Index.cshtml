@model List<Models.Model.Potion>

@{
    ViewData["Title"] = "Potions";
}

<div class="text-center">
    <h1 class="display-4">Potions</h1>
    @if(Model == null || !Model.Any()) {
        <p>No potions available.</p>
    } else {
        <div style="
            max-width: 800px;
            margin: 2rem auto;
            padding: 2rem;
            background-color: rgba(255, 255, 255, 0.85);
            border-radius: 12px;
            box-shadow: 0 4px 20px rgba(0,0,0,0.3);
            z-index: 2;
        ">
            <table class="table">
                <thead>
                    <tr>
                        <th>Name</th>
                        <th>Id</th>
                        <th>Price</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var potion in Model)
                    {
                        <tr>
                            <td>@potion.Name</td>
                            <td>@potion.Id</td>
                            <td>@potion.Price</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
</div>

<script>
    console.log("Hello from the potion index page");
    console.log(@Html.Raw(Json.Serialize(Model)));
</script>
